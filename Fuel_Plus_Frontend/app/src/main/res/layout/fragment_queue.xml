<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    tools:context=".user_sessions.Queue">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_queue"
        android:layout_width="match_parent"
        android:layout_height="735dp"
        android:layout_marginTop="12dp"
        android:background="#f4f0ec">

        <TextView
            android:id="@+id/fuelStatus"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stationName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/fuelStatus"
            app:layout_constraintStart_toStartOf="@+id/fuelStatus"
            app:layout_constraintTop_toBottomOf="@+id/fuelStatus" />

        <TextView
            android:id="@+id/stationCode"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/stationName"
            app:layout_constraintStart_toStartOf="@+id/stationName"
            app:layout_constraintTop_toBottomOf="@+id/stationName" />

        <TextView
            android:id="@+id/petrolQueueTxt"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/petrolQueueTxt"
            android:textAlignment="center"
            android:textColor="#696969"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/stationCode"
            app:layout_constraintTop_toBottomOf="@+id/stationCode" />

        <TextView
            android:id="@+id/petrolQueue"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/petrolQueueTxt"
            app:layout_constraintTop_toBottomOf="@+id/petrolQueueTxt" />

        <TextView
            android:id="@+id/dieselQueueTxt"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/dieselQueueTxt"
            android:textAlignment="center"
            android:textColor="#696969"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/stationCode"
            app:layout_constraintTop_toBottomOf="@+id/stationCode" />

        <TextView
            android:id="@+id/dieselQueue"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/dieselQueueTxt"
            app:layout_constraintTop_toBottomOf="@+id/dieselQueueTxt" />

        <Button
            android:id="@+id/petrolQueueJoinBtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#ffa812"
            android:text="@string/petrolQueueJoinBtn"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/petrolQueue"
            app:layout_constraintStart_toStartOf="@+id/petrolQueue"
            app:layout_constraintTop_toBottomOf="@+id/petrolQueue"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/dieselQueueJoinBtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#ffe135"
            android:text="@string/dieselQueueJoinBtn"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/dieselQueue"
            app:layout_constraintStart_toEndOf="@+id/petrolQueue"
            app:layout_constraintTop_toBottomOf="@+id/dieselQueue" />

        <Button
            android:id="@+id/outBtn"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginTop="62dp"
            android:backgroundTint="#00A300"
            android:text="@string/outBtn"
            android:textAllCaps="false"
            android:textColor="#F5F5F5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/petrolQueueJoinBtn"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/exitBtn"
            android:textAllCaps="false"
            android:textColor="#696969"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outBtn" />

    </android.support.constraint.ConstraintLayout>


</android.support.design.card.MaterialCardView>