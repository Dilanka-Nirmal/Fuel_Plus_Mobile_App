<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    tools:context=".user_sessions.GasStation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f0ec">

        <TextView
            android:id="@+id/fuelStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="168dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stationName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/fuelStatus"
            app:layout_constraintStart_toStartOf="@+id/fuelStatus"
            app:layout_constraintTop_toBottomOf="@+id/fuelStatus" />

        <TextView
            android:id="@+id/stationCode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/stationName"
            app:layout_constraintTop_toBottomOf="@+id/stationName" />

        <TextView
            android:id="@+id/petrolQueueTxt"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/petrolQueueTxt"
            android:textAlignment="center"
            android:textColor="#696969"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/stationCode"
            app:layout_constraintTop_toBottomOf="@+id/stationCode" />

        <TextView
            android:id="@+id/petrolQueue"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/petrolQueueTxt"
            app:layout_constraintTop_toBottomOf="@+id/petrolQueueTxt" />

        <TextView
            android:id="@+id/dieselQueueTxt"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="18dp"
            android:text="@string/dieselQueueTxt"
            android:textAlignment="center"
            android:textColor="#696969"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stationCode" />

        <TextView
            android:id="@+id/dieselQueue"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/dieselQueueTxt"
            app:layout_constraintTop_toBottomOf="@+id/dieselQueueTxt" />

        <Button
            android:id="@+id/goInsideBtn"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#ff0000"
            android:text="@string/goInsideBtn"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.design.card.MaterialCardView>